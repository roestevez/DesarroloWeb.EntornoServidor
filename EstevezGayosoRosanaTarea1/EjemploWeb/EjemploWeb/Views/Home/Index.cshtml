	<h2>Ejercicio 1: Notas</h2>

<p>
		@{
			//declarar variables
			Random rnd = new Random();
			int numeroNotas = rnd.Next(5, 11);
			int[] notas = new int[numeroNotas];
			int suma = 0;
			float media;


			//notas aleatorias
			for (int i = 0; i < numeroNotas; i++)
			{
				notas[i] = rnd.Next(0, 11);

			}

			//printar notas
	<p> Notas: </p>
			foreach (int nota in notas)
			{
				<p>Nota: @nota</p>
				

		

			}

			//nota media
	<p>nota media es:</p>

			foreach (int nota in notas)
			{
				suma += nota;
			}
			media = suma / numeroNotas;
	<p>@media</p>

			//buscar la nota mas baja y nota mas alta
	<p> nota mas baja es :</p>
			Array.Sort(notas);
			int notaMasBaja = notas[0];
			int notaMasAlta = notas[notas.Length - 1];
	<p>@notaMasBaja</p>
	<p> nota mas alta es : </p>
	<p>@notaMasAlta</p>



		}

	</p>

<h2>Ejercicio 2: Array strings</h2>
<p>
	Muestro una lista de string aleatorios
		@{
			//declaracion variables
			Random aleatorio = new Random();
			string[] palabrasAleatorias = new string[5];



			//generar strings aleatoriamente
			for (int i = 0; i < palabrasAleatorias.Length; i++)
			{
				int longitudPalabra = aleatorio.Next(1, 21); // longitud aleatoria entre 1 y 20 caracteres
				string palabra = "";

				for (int j = 0; j < longitudPalabra; j++)
				{
					char caracter = (char)aleatorio.Next('A', 'Z' + 1); // caracter aleatorio entre 'A' y 'Z'
					palabra += caracter;
				}

				palabrasAleatorias[i] = palabra;
			}

			//mostrar por pantalla
		<ul>
				@foreach (string palabra in palabrasAleatorias)
				{
				<li>@palabra</li>
				}
		</ul>

			//copiar matriz
			string[] palabrasAleatoriasCopia = new string[palabrasAleatorias.Length];
			Array.Copy(palabrasAleatorias, palabrasAleatoriasCopia, palabrasAleatorias.Length);

			//reverse
			Array.Reverse(palabrasAleatoriasCopia);
			<p>... y muestro el mismo array de forma inversa </p>
			//mostrar por pantalla reverse
		<ul>
				@foreach (string palabra in palabrasAleatoriasCopia)
				{
				<li>@palabra</li>
				}
		</ul>
		}

</p>
