<!--metodos-->
	@{
		//metodo mostrar baraja completa
		void mostrarBarajaCompleta(string[] palos)
		{


		<table border="1">


				@foreach (string palo in palos)
				{
				<tr>
					<td>@palo</td>
					<td>

							@for (int i = 1; i < 11; i++)
							{

								string foto = "/img/" + i.ToString() + palo + ".jpg";
							<img src="@foto" />

							}





					</td>
				</tr>
				}
		</table>





		}

	}
	@{
		//metodo mostrarcarta por nombre
		void mostrarCarta(string carta1)
		{
			string rutaCarta = "/img/" + carta1 + ".jpg";
		<img src="@rutaCarta" />
		<p>@carta1</p>




		}
	}
	@{
		//metodo carta aleatoria
		void cartaAleatoria()
		{
			List<string> baraja = new List<string>();

			foreach (var palo in palos)
			{
				for (int i = 1; i < 11; i++)
				{
					string carta = i + palo;
					baraja.Add(carta);
				}
			}

			Random aleatorio = new Random();
			int indiceAleatorio = aleatorio.Next(baraja.Count);
			string cartaAleatoria = baraja[indiceAleatorio];
			string rutacarta2 = "/img/" + cartaAleatoria + ".jpg";
		<img src="@rutacarta2" />



		<p>@cartaAleatoria</p>




		}
	}


